#!/bin/sh

usage(){
	echo >&2 "Usage: $0 [--use-ps]"
	exit 1
}

trace_tool(){
	ed -s config.h > /dev/null <<!
/TRACE_TOOL .*/s/.*/#define TRACE_TOOL "$1"/
wq
!
}

config(){
	echo "$@" >> config.mk
}

use_ps=0
for arg in $@
do
	case "$arg" in
		--use-ps)
			use_ps=1
			;;
		*)
			usage
			;;
	esac
done

set -e
rm -f config.mk

arch=`uname -s`

case $arch in
	FreeBSD)
		config "LDFLAGS += -lkvm"
		trace_tool ktrace
		;;
	Linux)
		config "CFLAGS += -D_POSIX_SOURCE -D_BSD_SOURCE"
		trace_tool strace
		;;
	*)
		(
			echo "unregonised platform ($arch)"
		) >&2
		use_ps=1
		;;
esac

if test $use_ps -ne 0
then
	echo "Using \`ps\` parser"
	config "CFLAGS += -DMACHINE_PS"
fi

exec 3>&-

echo Configured for $arch
