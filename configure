#!/bin/sh

trace_tool(){
	sed 's/TRACE_TOOL .*/TRACE_TOOL "'"$1"'"/' config.h > /tmp/$$
	mv /tmp/$$ config.h
}

if [ $# -ne 0 ]
then
	echo >&2 "$0: no args wanted"
	exit 1
fi

set -e
exec 3> config.mk

arch=`uname -s`

case $arch in
	FreeBSD)
		echo "LDFLAGS += -lkvm" >&3
		trace_tool ktrace
		;;
	Linux)
		echo "CFLAGS += -D_POSIX_SOURCE -D_BSD_SOURCE" >&3
		trace_tool strace
		;;
	*)
		echo "$0: unregonised platform" >&2
		;;
esac

exec 3>&-

echo Configured for $arch
